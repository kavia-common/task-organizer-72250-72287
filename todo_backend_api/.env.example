# Flask server settings
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=3001
FLASK_DEBUG=0

# Authentication
# REQUIRED: Secret key for signing JWTs
JWT_SECRET=replace-with-a-strong-random-secret
# OPTIONAL: JWT expiration time in hours (default 24)
JWT_EXPIRES_HOURS=24

# Database connectivity
# REQUIRED: MongoDB connection string and database name
MONGODB_URL=mongodb://todo_database:27017
MONGODB_DB=todo_app

# Notes:
# - Do not commit your actual .env file with real secrets.
# - Copy this file to .env and adjust values for your environment.
